<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdvGold2018.NotesItemPage"
             Title="{Binding Name}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Spacing="2">
            <Label Text="Name" Margin="0" FontSize="Medium" HeightRequest="25"/>
            <Entry Text="{Binding Name}" FontSize="Small" Margin="0" HeightRequest="35"/>
            <Label Text="Notes" Margin="0" FontSize="Medium" HeightRequest="25"/>
            <Editor Text="{Binding Notes}" HeightRequest="100" FontSize="Micro"/>
            <Button Text="Save" Clicked="OnSaveClicked" FontSize="Small"/>
            <Button Text="Delete" Clicked="OnDeleteClicked" FontSize="Small"/>
            <Button Text="Cancel" Clicked="OnCancelClicked" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>